<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.sourceforge.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="pwa.companycar.Car" table="CAR">
        <id name="immatriculation" column="ID">
        </id>
        <property name="description"/>
        <property name="numberOfSeats"/>
        <property name="notes"/>
        <property name="stateCode" column="state"/>
        <set name="bookings">
	        <key column="carID" 
	            not-null="true"/>
	        <one-to-many class="pwa.companycar.Booking"/>
    	</set>
    </class>

</hibernate-mapping>