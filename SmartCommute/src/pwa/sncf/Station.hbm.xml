<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.sourceforge.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pwa.sncf.Train" table="TRAIN">
        <id name="uic">
        </id>
        <property name="nom" column="label"/>
        <property name="proximite"/>
        <property name="timeToReach" column="tempsDeMarche"/>
        <set name="trains">
	        <key column="arriveeID"/>
	        <one-to-many class="pwa.sncf.Train"/>
    	</set>
    </class>

</hibernate-mapping>